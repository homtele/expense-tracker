<div class="card">
  <form action="/records/{{record._id}}?_method=put" method="post" class="edit__form">
    <div class="input-wrapper">
      <p class="message">*必填欄位</p>
      <p class="title">請修改你的支出</p>
    </div>
    <div class="input-wrapper">
      <label for="name">名稱*：</label>
      <input type="text" name="name" id="name" value="{{record.name}}" required>
    </div>
    <div class="input-wrapper">
      <label for="date">日期*：</label>
      <input type="date" name="date" id="date" value="{{record.date}}" required>
    </div>
    <div class="input-wrapper">
      <label for="categoryId">類別*：</label>
      <select name="categoryId" id="categoryId" required>
        {{#each categories}}
        <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="input-wrapper">
      <label for="amount">金額*：</label>
      <input type="number" name="amount" id="amount" value="{{record.amount}}" required>
    </div>
    <div class="input-wrapper">
      <button type="submit">送出</button>
    </div>
  </form>
</div>
